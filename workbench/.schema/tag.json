{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://github.com/alphagov/data-standards-authority/blob/main/workbench/.schema/tag.json",
  "title": "Data Standards Authority Tag objects",
  "description": "A JSON Schema to manage the format of tag objects",
  "type": "object",
  "required": [
    "name"
  ],
  "properties": {
    "name": {
      "$comment": "The name of the tag",
      "type": "string",
      "minLength": 2
    },
    "description": {
      "$comment": "A description of the tag",
      "type": "string"
    }
  }
}
